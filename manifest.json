{
  "name": "Engo Pro",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Engo Pro: ứng dụng tạo flash card học tiếng anh https://engo.pro",
  "homepage_url": "https://engo.pro",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "vi",
  "background": {
    "page": "src/background/background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Engo Pro",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "src/browser_action/inject.css"
      ]
    },
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "src/browser_action/inject.js"
      ]
    }
  ]
}